/*----------------------------------------------------------
 header
------------------------------------------------------------*/

.header
  position: fixed
  top: 0
  left: 0
  width: 100%
  z-index: 2
  box-sizing: border-box
  &.opened
    height: 100vh
    background: rgba(0, 0, 0, 0.7)
  &__inner
    position: relative
    background: #0c105f
  &__logo
    width: 80px
    padding: 10px


/*----------------------------------------------------------
 globalNav
------------------------------------------------------------*/

.globalNav
  &__btnToggle
    position: absolute
    top: 12px
    right: 12px
    width: 26px
    height: 22px
    border-top: 2px solid #fff
    border-bottom: 2px solid #fff
    box-sizing: border-box
    &:after
      content: ""
      display: block
      position: absolute
      top: 50%
      left: 0
      width: 100%
      height: 1px
      margin-top: -2px
      border-bottom: 2px solid #fff
    &.active
      border-width: 0
      &:before
        content: ""
        display: block
        position: absolute
        top: 10px
        left: 1px
        width: 100%
        height: 1px
        border-bottom: 1px solid #fff
        transform: rotate(45deg)
      &:after
        top: 10px
        margin-top: 0
        border-width: 1px
        transform: rotate(-45deg)
  &__list
    display: none
    background: #192469
    > li
      border-top: 1px solid #d2d4df
      a
        display: block
        padding: 15px 10px 15px 20px
        color: #d1d4e0
        mixin--arrow-right(10px, #d1d4e0, 20px)


