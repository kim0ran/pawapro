/*----------------------------------------------------------
 mixin
------------------------------------------------------------*/

/* icon-arrow
--------------------------------------------------*/

mixin--arrow(colors)
  position: relative
  &:after
    content: ""
    display: block
    position: absolute
    transform: rotate(45deg)
    border-style: solid
    border-color: colors

mixin--arrow-left(size, colors, left)
  mixin--arrow(colors)
  &:after
    top: 50%
    left: left
    width: size
    height: size
    margin-top: -(size/1.7)
    border-width: 0 0 2px 2px

mixin--arrow-right(size, colors, right)
  mixin--arrow(colors)
  &:after
    top: 50%
    right: right
    width: size
    height: size
    margin-top: -(size/1.7)
    border-width: 2px 2px 0 0

mixin--arrow-top(size, colors, right)
  mixin--arrow(colors)
  &:after
    top: 50%
    right: right
    width: size
    height: size
    margin-top: -(size/3)
    border-width: 2px 0 0 2px

mixin--arrow-down(size, colors, right)
  mixin--arrow(colors)
  &:after
    top: 50%
    right: right
    width: size
    height: size
    margin-top: -(size/1.3)
    border-width: 0 2px 2px 0


/* icon-indicate
--------------------------------------------------*/

mixin--indicate-minus(size, colors, right)
  position: relative
  &:before
    content: ""
    display: block
    position: absolute
    top: 50%
    right: right
    width: size
    height: (size*0.5)
    margin-top: -1px
    border-top: 2px solid colors
  &:after
    content: none
    
mixin--indicate-plus(size, colors, right)
  mixin--indicate-minus(size, colors, right)
  &:after
    content: ""
    display: block
    position: absolute
    top: 50%
    right: right
    width: (size*0.5)
    height: size
    margin-top: -(size*0.5)
    margin-right: -1px
    border-left: 2px solid colors






