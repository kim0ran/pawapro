.detailAbility
  margin-top: 50px
  &__nav
    display: flex
    padding-bottom: 40px
    > li
      flex-grow: 1
      margin-left: 1px
      background: #33378b
      &:first-child
        margin-left: 0
      a
        display: block
        padding: 10px
        color: #fff
        text-align: center
      &:hover
        background: #192469
      &.active
        position: relative
        background: #192469
        &:after
          content: "â–¼"
          position: absolute
          bottom: -16px
          left: 50%
          margin-left: -7px
          font-size: 14px
          color: #192469
  &__content
    position: relative
  &__section
    position: absolute
    top: 0
    left: 0
    width: 100%